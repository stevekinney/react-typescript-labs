{
  "name": "react-typescript-playground",
  "version": "0.0.1",
  "private": true,
  "description": "Modern React TypeScript playground with Vite, TailwindCSS v4, and best-in-class tooling",
  "license": "MIT",
  "author": "Steve Kinney",
  "type": "module",
  "exports": {
    "bun": "./dist/index.js",
    "node": "./dist/index.js"
  },
  "scripts": {
    "build": "vite build",
    "build-storybook": "storybook build",
    "check:all": "bun run typecheck && bun run lint && bun run format:check && bun run test",
    "clean": "rm -rf dist coverage node_modules/.cache .turbo storybook-static",
    "dev": "vite dev",
    "examples": "node scripts/examples-cli.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "preview": "vite preview",
    "start": "vite dev",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@storybook/react": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "change-case": "^5.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ink": "^6.3.1",
    "lucide-react": "^0.544.0",
    "qs": "^6.14.0",
    "react": "^19.1.1",
    "react-compiler-runtime": "^19.1.0-rc.3",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-storybook": "^9.1.8",
    "fast-glob": "^3.3.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sort-package-json": "^3.4.0",
    "storybook": "^9.1.8",
    "tailwindcss": "^4.1.13",
    "tsd": "^0.33.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
